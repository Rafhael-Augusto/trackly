generator client {
  provider = "prisma-client"
  output   = "../app/gennerated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Tasks {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  icon        String
  createdAt   DateTime @default(now())
}

model Goals {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  deadline    DateTime
  createdAt   DateTime @default(now())
}

model Notifications {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  time        String
  createdAt   DateTime @default(now())
}

model TimeTracker {
  id        Int      @id @default(autoincrement())
  hours     Int
  minutes   Int
  seconds   Int
  createdAt DateTime @default(now())
}
