generator client {
  provider = "prisma-client"
  output   = "../app/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum TaskStatus {
  PENDING
  STARTED
  DONE
}

enum TaskPriority {
  HIGH
  LOW
}

model Task {
  id          Int          @id @default(autoincrement())
  title       String
  description String
  icon        String
  status      TaskStatus   @default(PENDING)
  priority    TaskPriority @default(LOW)
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  startedAt   DateTime?
  completedAt DateTime?
}

model Goal {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  deadline    DateTime
  createdAt   DateTime @default(now())
}

model Notification {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  time        String
  active      Boolean
  createdAt   DateTime @default(now())
}

model TimeTracker {
  id        Int      @id @default(autoincrement())
  duration  Int
  createdAt DateTime @default(now())
}
